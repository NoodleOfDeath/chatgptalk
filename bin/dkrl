#!/bin/bash

THIS=$(basename $0)

usage() {
  echo "shorthand for 'docker logs <container>'"
  echo
  echo "usage: $THIS [-h|--help] <pattern>"
  echo "  -h|--help          show this help"
  echo "  <pattern>          pattern to match in container name"
  exit 1
}

ARGS=()
PATTERN=

while [[ $# -gt 0 ]]; do
  case "$1" in
  -h | --help)
    usage
    ;;
  *)
    ARGS+=("$1")
    ;;
  esac
  shift
done

PATTERN="${ARGS[0]}"

if [[ -z "$PATTERN" ]]; then
  usage
fi

docker logs $(docker ps | grep $PATTERN | grep '[a-zA-Z0-9-]*$' -o) -f
