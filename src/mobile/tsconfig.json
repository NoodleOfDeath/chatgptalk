{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": false,
    "jsx": "react-jsx",
    "lib": [
      "es5",
      "es6",
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "allowJs": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "index.js",
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "metro.config.js",
    "jest.config.js",
    "react-native.config.js"
  ]
}