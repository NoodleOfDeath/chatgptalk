{
  "name": "readless-mobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "postinstall": "yarn tsoa && yarn pod:fix",
    "pod:fix": "sed -i '' 's/IPHONEOS_DEPLOYMENT_TARGET = 11.0/IPHONEOS_DEPLOYMENT_TARGET = 13.0/' ios/Pods/Pods.xcodeproj/project.pbxproj",
    "pod": "npx pod-install && yarn pod:fix",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "mon": "nodemon --config nodemon.mobile.json -x 'yarn cp:core'",
    "start": "react-native start",
    "build": "yarn build:ios && yarn build:android",
    "build:ios": "react-native bundle --entry-file='./index.js' --bundle-output='./ios/ReadLess/main.jsbundle' --dev=false --platform='ios' --assets-dest='./ios'",
    "build:android": "react-native bundle --entry-file='./index.js' --bundle-output='./android/app/src/main/assets/index.android.bundle' --dev=false --platform='android' --assets-dest='./android/app/src/main/res/' && rm -rf ./android/app/src/main/res/drawable-*",
    "test": "jest",
    "gen": "npx swagger-typescript-api --disable-throw-on-error -p ./swagger.json -o ./src/gen && yarn cp:core",
    "cp:core": "if [[ -d src/core ]]; then rm -rf src/core; fi && mkdir -p ./src/core && cp -rf ../core/src/client/* ./src/core && cp -rf ../core/src/utils/* src/core/utils",
    "tsoa": "(cd ../server && yarn tsoa) && cp ../server/swagger.json . && yarn gen",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
  },
  "dependencies": {
    "@expo/react-native-action-sheet": "^4.0.1",
    "@react-native-async-storage/async-storage": "^1.18.1",
    "@react-native-clipboard/clipboard": "^1.11.2",
    "@react-native-community/hooks": "^3.0.0",
    "@react-navigation/bottom-tabs": "^6.5.7",
    "@react-navigation/native": "^6.1.6",
    "@react-navigation/native-stack": "^6.9.12",
    "date-fns": "^2.29.3",
    "expo": "^48.0.0",
    "expo-constants": "^14.2.1",
    "expo-modules-core": "^1.2.4",
    "js-base64": "^3.7.5",
    "ms": "^2.1.3",
    "react": "18.2.0",
    "react-native": "^0.71.8",
    "react-native-action-button": "^2.8.5",
    "react-native-actions-sheet": "^0.8.29",
    "react-native-chart-kit": "^6.12.0",
    "react-native-cloud-store": "^0.10.3-alpha.1",
    "react-native-detector": "^0.2.3",
    "react-native-fast-image": "^8.6.3",
    "react-native-fs": "^2.20.0",
    "react-native-gesture-handler": "^2.10.1",
    "react-native-haptic-feedback": "^2.0.3",
    "react-native-highlight-words": "^1.0.1",
    "react-native-iap": "^12.10.5",
    "react-native-inappbrowser-reborn": "^3.7.0",
    "react-native-localization": "^2.3.1",
    "react-native-notifications": "^4.3.3",
    "react-native-orientation-locker": "^1.5.0",
    "react-native-paper": "^5.8.0",
    "react-native-popover-view": "^5.1.7",
    "react-native-reanimated": "^3.1.0",
    "react-native-safe-area-context": "^4.5.0",
    "react-native-screens": "^3.20.0",
    "react-native-share": "^8.2.2",
    "react-native-shimmer": "^0.6.0",
    "react-native-snap-carousel": "^3.9.1",
    "react-native-svg": "^13.9.0",
    "react-native-tableview-simple": "^4.4.0",
    "react-native-track-player": "^4.0.0-rc04",
    "react-native-tts-export": "^5.2.3",
    "react-native-vector-icons": "^9.2.0",
    "react-native-version-check": "^3.4.7",
    "react-native-view-shot": "^3.6.0",
    "victory-native": "^36.6.11"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@tsconfig/react-native": "^2.0.3",
    "@types/jest": "^29.2.1",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.14.6",
    "@types/pluralize": "^0.0.29",
    "@types/react": "^18.0.24",
    "@types/react-native-highlight-words": "^1.0.2",
    "@types/react-native-snap-carousel": "^3.8.5",
    "@types/react-native-vector-icons": "^6.4.13",
    "@types/react-native-version-check": "^3.4.5",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.73.7",
    "nodemon": "^2.0.22",
    "react-native-dotenv": "^3.4.8",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "jest": {
    "preset": "react-native"
  }
}
